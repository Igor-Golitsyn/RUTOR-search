<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              tools:context=".ui.activities.EntryActivity">

    <ImageView
        android:id="@+id/torrent_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/torrent_image_size_256"/>

    <TextView
        android:id="@+id/torrent_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/torrent_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/torrent_button"/>

</LinearLayout>